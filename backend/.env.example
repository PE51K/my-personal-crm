# =============================================================================
# Backend Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values.
# NEVER commit .env files with real secrets to version control.
# =============================================================================

# =============================================================================
# Supabase Configuration (Required)
# =============================================================================
# Your Supabase project URL (found in Project Settings > API)
SUPABASE_URL=https://your-project.supabase.co

# Service role key for server-side operations (found in Project Settings > API)
# WARNING: This key bypasses Row Level Security - keep it secret!
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# [DEPRECATED - OPTIONAL] Legacy JWT secret - No longer needed!
# The backend now uses JWKS (asymmetric keys) for JWT verification.
# You can safely remove this line from your .env file.
# SUPABASE_JWT_SECRET=your-jwt-secret

# Storage bucket name for contact photos
SUPABASE_STORAGE_BUCKET=contact-photos

# =============================================================================
# Application Configuration
# =============================================================================
# Environment: development, staging, production
APP_ENV=development

# Enable debug mode (set to false in production)
APP_DEBUG=true

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
APP_LOG_LEVEL=INFO

# =============================================================================
# Security
# =============================================================================
# Allowed CORS origins (JSON array format)
CORS_ORIGINS=["http://localhost:3000"]

# Access token expiration in minutes
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Refresh token expiration in days
REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# Server
# =============================================================================
# Host to bind to (0.0.0.0 for Docker)
HOST=0.0.0.0

# Port to listen on
PORT=8000
