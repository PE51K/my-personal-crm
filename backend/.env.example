# ==================== DOCKER PORT MAPPING ====================

# On which port forward the FastAPI app from the Docker container to the host machine
# Doesn't affect local development, only for docker deployment
APP_PORT=8000

# ==================== APP LOGGING ====================

# Application logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
APP_LOG_LEVEL=INFO

# ==================== APP CORS ====================

# FastAPI CORS origins (comma-separated list)
APP_CORS_ORIGINS=["http://localhost", "http://localhost:5173", "http://localhost:5174", "http://localhost:7777"]
APP_CORS_ALLOW_CREDENTIALS=true
APP_CORS_ALLOW_METHODS=["*"]
APP_CORS_ALLOW_HEADERS=["*"]

# ==================== DATABASE ====================

# PostgreSQL database connection settings
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=personal_crm
POSTGRES_USER=crm_user
POSTGRES_PASSWORD=crm_password

# ==================== S3/MINIO ====================

# S3/MinIO connection for backend
# Use service name (test-minio) for Docker environment, or actual endpoint for production
S3_ENDPOINT_URL=http://localhost:9002
S3_ACCESS_KEY_ID=test_minio
S3_SECRET_ACCESS_KEY=secure_minio_password
S3_BUCKET_NAME=test-bucket
S3_REGION=us-east-1

# ==================== YANDEX GPT ====================

# YandexGPT configuration for conversational AI and text generation
# Follow these steps to obtain your credentials:
#
# 1. Go to Yandex Cloud Console: https://console.yandex.cloud/
# 2. Create a new folder or select an existing one
# 3. Navigate to "Service Accounts" in the left sidebar
# 4. Create a new service account with "executor" role for foundation models
# 5. Go to the service account details and create an API key
# 6. Copy the API key and folder ID
#
# For detailed instructions, see:
# https://yandex.cloud/ru/docs/foundation-models/operations/get-api-key
#
# Required credentials:
YANDEX_GPT_API_KEY=your_api_key_here                    # Your Yandex Cloud API key
YANDEX_GPT_BASE_URL=https://llm.api.cloud.yandex.net/v1 # Yandex API endpoint (usually don't change)
YANDEX_GPT_FOLDER_ID=your_folder_id_here               # Your Yandex Cloud folder ID (from console)
YANDEX_GPT_MODEL=yandexgpt                         # Model name: yandexgpt-lite, yandexgpt
YANDEX_GPT_MODEL_VERSION=latest                         # Model version (latest, or specific version)

# ==================== AIRFLOW ====================

# Airflow PostgreSQL
AIRFLOW_POSTGRES_USER=airflow
AIRFLOW_POSTGRES_PASSWORD=secure_airflow_postgres_password
AIRFLOW_POSTGRES_DB=airflow
AIRFLOW_POSTGRES_PORT=5434
AIRFLOW_POSTGRES_VOLUME=./volumes/airflow/postgres

# Airflow
AIRFLOW_FERNET_KEY=secure_airflow_fernet_key
AIRFLOW_DAGS_VOLUME=./dags
AIRFLOW_PORT=8080
AIRFLOW_LOGS_VOLUME=./volumes/airflow/logs
AIRFLOW_ADMIN_USER=admin
AIRFLOW_ADMIN_PASSWORD=secure_admin_password
